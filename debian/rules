#!/usr/bin/make -f
  
export DH_VERBOSE=1

INSTALL		= install
INSTALL_PROGRAM = $(INSTALL)
INSTALL_DATA    = $(INSTALL) -m 644

PROGRAM		= $(shell dh_listpackages)
DESTDIR		= $(CURDIR)/debian/$(PROGRAM)/
DESTDIR_BIN	= $(CURDIR)/debian/$(PROGRAM)/usr/bin/
DESTDIR_ETC	= $(CURDIR)/debian/$(PROGRAM)/etc/$(PROGRAM)/

clean:
	dh_testdir
	dh_testroot
	dh_clean build-stamp install-stamp

build: build-stamp
build-stamp: 
	dh_testdir
	touch $@

install: install-stamp
install-stamp:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	$(INSTALL_DATA) snort_rules/*.rules $(DESTDIR_ETC)snort_rules
	
	$(INSTALL_DATA) fwsnort.conf $(DESTDIR_ETC)

	$(INSTALL_PROGRAM) $(PROGRAM) $(DESTDIR_BIN)

	touch $@
	
binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdebconf
	dh_installchangelogs ChangeLog
	dh_installdocs
	dh_installman
	dh_perl
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-arch:

binary: binary-indep binary-arch
.PHONY: clean build binary-indep binary-arch binary install

